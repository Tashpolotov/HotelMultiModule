<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/radius_edit_text</item>
        <item name="android:fontFamily">@font/ff_sf_pro_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingHorizontal">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ff_sf_pro_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewRegularGray" parent="BaseTextView">
        <item name="android:fontFamily">@font/ff_sf_pro_display_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>



</resources>